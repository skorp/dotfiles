[user]
           name = Kadir Ã–zdemir
           email = ko@webberz.at
[alias]
	c = commit -am
	up = pull
	p = push
	s = status
	ss = status -s
	df = diff --color --color-words --abbrev
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	send = update-index --no-assume-unchanged
	notsend = update-index --assume-unchanged
	dmb=!git branch --no-color --merged | egrep -v '(^\\*|master|dev)' | xargs git branch -d
[color]
	ui = always
[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitignore
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	filemode = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"

# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@github.com:skorp/"]
  insteadOf = "git://github.com/skorp/"

  [difftool "sourcetree"]
  	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  	path =
  [mergetool "sourcetree"]
  	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  	trustExitCode = true
  [credential]
  	helper = osxkeychain
